  if [ -n "${INSTALL_URL_LAS}" ]; then
    # Downloads a file with progress using wget and yad
    wget "${INSTALL_URL_LAS}" -O "${TMPDIR}/${INSTALL_EXE_LAS}" 2>&1 | \
    perl -p -e '$| = 1; s/^.* +([0-9]+%) +([0-9,.]+[GMKB]) +([0-9hms,.]+).*$/\1\n# Downloading... \2 (\3)/' | \
