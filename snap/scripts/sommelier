    # Remove the cached installers & files
    rm -v "${TMPDIR}/${INSTALL_EXE_EUNE}"
    rm -rf "${XDG_CACHE_HOME}/winetricks" 2>/dev/null
    # Launch after install.
    launch_app
  fi
}

